<p id="notice"><%= notice %></p>

<h1>All Locations</h1>

<%= link_to 'New Location', new_location_path, :class => 'btn btn-outline-success' %>

<br><br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      
      <th>Location Type</th>
      <th>Address</th>
      <th>Address2</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Reception phone</th>
      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.location_type %></td>
        <td><%= link_to location.address, "https://www.google.com/maps/search/?api=1&query=#{location.address.parameterize('+')}", :title => "Open #{location.address} in Google Maps", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= location.address2 %></td>
        <td><%= location.city %></td>
        <td><%= location.postal_code %></td>
        <td><%= location.country %></td>
        <td><%= link_to location.reception_phone, "tel:#{location.reception_phone}", :title => "Call #{location.reception_phone}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to 'Show', location, :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
