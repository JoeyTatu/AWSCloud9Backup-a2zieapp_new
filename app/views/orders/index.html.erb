<p id="notice"><%= notice %></p>

<h1>Order details</h1>
<%= link_to 'New Order', new_location_employee_customer_order_path(@location, @employee, @customer, @order), :class => 'btn btn-outline-success' %>
<%= link_to 'Back to Customer', [@location, @employee, @customer], :class => 'btn btn-outline-info' %>

<br><br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Product</th>
      <th>Order Date</th>
      <th>Due on</th>
      <th>Shipped on</th>
      <th>Status</th>
      <th>Comments</th>

      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% @customer_name = order.customer.first_name + ' ' + order.customer.last_name %>
      <tr>
        <td><%= link_to @customer_name, location_employee_customer_path(@location, @employee, @customer), title: "Show customer details for #{@customer_name}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= order.product.product_name %></td>
        <td><%= order.order_date %></td>
        <td><%= order.due_on %></td>
        <td><%= order.shipped_on %></td>
        <td><%= order.status %></td>
        <td><%= order.comments %></td>
        <td><%= link_to 'Show', location_employee_customer_order_path(@location, @employee, @customer, order), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_employee_customer_order_path(@location, @employee, @customer, order), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location_employee_customer_order_path(@location, @employee, @customer, order), method: :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
