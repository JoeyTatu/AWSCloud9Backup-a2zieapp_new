<p id="notice"><%= notice %></p>

<h1>Employees details</h1>

<%= link_to 'New Employee', new_location_employee_path(@location), :class => 'btn btn-outline-success' %>
<%= link_to 'Back to location', @location, :class => 'btn btn-outline-info' %>

<br><br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Employee name</th>
      <th>Employee type</th>
      <th>Started on</th>
      <th>Left on</th>
      <th>Address</th>
      <th>Address2</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Personal phone</th>
      <th>Office phone</th>
      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %> <%= employee.last_name %></td>
        <td><%= employee.employee_type %></td>
        <td><%= employee.started_on %></td>
        <td><%= employee.left_on %></td>
        <td><%= link_to employee.address, "https://www.google.com/maps/search/?api=1&query=#{employee.address.parameterize('+')}", :title => "Open #{employee.address} in Google Maps", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= location.address2 %></td>
        <td><%= location.city %></td>
        <td><%= location.postal_code %></td>
        <td><%= location.country %></td>
        <td><%= link_to employee.personal_phone "tel:#{employee.personal_phone}", :title => "Call #{employee.personal_phone}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to employee.office_phone "tel:#{employee.office_phone}", :title => "Call #{employee.office_phone}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to 'Show', location_employee_path(@location, department), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_employee_path(@location, department), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location_employee_path(@location, department), :method => :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
