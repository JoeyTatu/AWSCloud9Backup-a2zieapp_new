<p id="notice"><%= notice %></p>

<h1>All Products</h1>
<h5>Listing all Products belonging to all Departments</h5>
<%= link_to 'Go to Departments', dept_navbar_path, :class => 'btn btn-outline-info' %> |
<%= link_to "New Product", nil, :onclick => "alert('To add a new Product, click the Department link below')", :class => 'btn btn-outline-success' %> |
<%= link_to 'Home', home_path, :class => 'btn btn-outline-info' %>

<br><br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Product Description</th>
      <th>Website URL</th>
      <th>Barcode</th>
      <th>Department</th>
      <th>Size</th>
      <th>Weight</th>
      <th>Vendor</th>
      <th>Buy price</th>
      <th>Sell peice</th>

      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_desc %></td>
        <td><%= product.website_id %></td>
        <td><%= product.barcode %></td>
        <td><%= link_to product.department.department_name, location_department_path(product.department.location, product.department), title: "Go to the #{product.department.department_name} department", :style => 'color: #3366BB; text-decoration: underline;'  %></td>
        <td><%= product.size %></td>
        <td><%= product.weight %>kg</td>
        <td><%= product.product_vendor %></td>
        <td>€<%= product.buy_price_each %> each</td>
        <td>€<%= product.sell_price_each %> each</td>
        
        <td><%= link_to 'Show', location_department_product_path(product.department.location, product.department, product), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_department_product_path(product.department.location, product.department, product), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location_department_product_path(product.department.location, product.department, product), :method => :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>