<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>

<%= form_for([@location, @department, @product]) do |f| %>
    <% if @product.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
            <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
    <div class="field">
        <%= f.label :product_name %><br>
        <%= f.text_field :product_name, :class => 'form-control' %>
    </div>
        <div class="field">
        <%= f.label :product_desc %><br>
        <%= f.text_field :product_desc, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :department %><br>
        <%= f.collection_select(:department, @departments, :id, :department_name) %>
    </div>
    <div class="field">
        <%= f.label :website_id %><br>
        <%= f.text_field :website_id, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :barcode %><br>
        <%= f.number_field :barcode, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :size %><br><small>Format: H x W x L</small><br>
        <%= f.text_field :size, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :weight %><br><small>Format: 12.3</small><br>
        <%= f.text_field :weight, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :product_vendor %><br>
        <%= f.text_field :product_vendor , :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :quanity_in_stock %><br>
        <%= f.number_field :quanity_in_stock, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :buy_price_each %><br><small>Format: 12.34</small><br>
        <%= f.text_field :buy_price_each , :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :sell_price_each %><br><small>Format: 12.34</small><br>
        <%= f.text_field :sell_price_each , :class => 'form-control' %>
    </div>
    <div class="actions">
        <%= f.submit 'Submit', :class => 'btn btn-outline-success' %>
    </div>
    
<% end %>
<hr />