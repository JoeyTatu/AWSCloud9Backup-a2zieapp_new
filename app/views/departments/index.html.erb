<p id="notice"><%= notice %></p>

<h1>Department details</h1>
<%= link_to 'New Department', new_location_department_path(@location), :class => 'btn btn-outline-success' %>
<%= link_to 'Back to location', @location, :class => 'btn btn-outline-info' %>

<br><br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Department name</th>
      <th>Description</th>
      <th>Department phone</th>
      <th>Location address</th>

      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.department_name %></td>
        <td><%= department.description %></td>
        <td><%= link_to department.department_phone, "tel:#{department.department_phone}", :title => "Call #{department.department_phone}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to @location.address, "https://www.google.com/maps/search/?api=1&query=#{@location.address.parameterize('+')}", :title => "Open #{@location.address} in Google Maps", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to 'Show', location_department_path(@location, department), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_department_path(@location, department), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location_department_path(@location, department), :method => :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
