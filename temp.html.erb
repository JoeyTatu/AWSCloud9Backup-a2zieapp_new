<p id="notice"><%= notice %></p>

<h1>Department details</h1>

<%= link_to 'New Location', new_location_department_path(@location), :class => 'btn btn-outline-success' %>

<br><br>

<h5><%= department.department_name %></h5>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      
      <th>Description</th>
      <th>Department phone</th>

      <th colspan="3"><center>Options</center></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.description %></td>
        <td><%= link_to department.department_phone, "tel:#{department.department_phone}", :title => "Call #{department.department_phone}", :style => 'color: #3366BB; text-decoration: underline;' %></td>
        <td><%= link_to 'Show', location, :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Only admins can delete. Continue?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
